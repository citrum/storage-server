<configuration>
  <jmxConfigurator />
  <appender name="app" class="logback.SignalRollingFileAppender">
    <file>/tmp/storage-server/app.log</file>
    <append>true</append>
    <encoder>
      <pattern>%date [%level:%thread] %c{1}:%marker - %msg%n</pattern>
    </encoder>
  </appender>

  <!-- Appender для записей уровня WARN и ERROR -->
  <appender name="app-warn" class="logback.SignalRollingFileAppender">
    <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
      <level>WARN</level>
    </filter>
    <file>/tmp/storage-server/app-warn.log</file>
    <encoder>
      <pattern>%date [%level:%thread] %c{1}:%marker - %msg%n</pattern>
    </encoder>
  </appender>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>[%level] %logger{15}:%marker :%thread - %message%n%xException{20}</pattern>
    </encoder>
  </appender>

  <logger name="org.apache.http" level="ERROR"/>

  <root level="INFO">
    <appender-ref ref="app"/>
    <appender-ref ref="app-warn"/>
    <appender-ref ref="STDOUT"/>
  </root>
</configuration>
